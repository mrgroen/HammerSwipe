<?xml version="1.0" encoding="utf-8" ?>
<widget id="HammerSwipe.widget.HammerSwipe" needsEntityContext="false" xmlns="http://www.mendix.com/widget/1.0/">
  <name>HammerSwipe</name>
  <description>Swipe a DOM element left or right to trigger a microflow.</description>

  <icon></icon>

  <properties>
        <property key="dojoQuery" type="string" required="true" defaultValue="">
            <caption>Dojo query</caption>
            <category>Behavior</category>
            <description>Select the DOM node based on a CSS selector.</description>
        </property>
        <property key="swipeAnimation" type="boolean" defaultValue="false">
            <caption>Swipe animation</caption>
            <category>Behavior</category>
            <description>Animated element when swiping.</description>
        </property>
        <property key="leftMicroflow" type="microflow" required="false" defaultValue="">
            <caption>Microflow Left Swipe</caption>
            <category>Behavior</category>
            <description>The microflow to execute on left swipe.</description>
            <returnType type="Boolean"></returnType>
        </property>
        <property key="rightMicroflow" type="microflow" required="false" defaultValue="">
            <caption>Microflow Right Swipe</caption>
            <category>Behavior</category>
            <description>The microflow to execute on right swipe.</description>
            <returnType type="Boolean"></returnType>
        </property>
	</properties>
</widget>

